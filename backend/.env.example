# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=attendance_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_POOL_MAX=20
DB_POOL_MIN=5

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Face Recognition
FACE_RECOGNITION_THRESHOLD=0.85
LIVENESS_THRESHOLD=0.75
FACE_EMBEDDING_DIMENSION=128

# Geofencing
CLASSROOM_RADIUS=20
GPS_ACCURACY_THRESHOLD=20

# QR Code
QR_CODE_VALIDITY=300
QR_ROTATION_INTERVAL=300000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@attendance.com

# Push Notifications (Optional)
FCM_SERVER_KEY=

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# Campus Coordinates (Example: Main Campus)
CAMPUS_CENTER_LAT=28.6139
CAMPUS_CENTER_LNG=77.2090
CAMPUS_RADIUS=1000

# Classroom Coordinates (JSON format)
# Format: {"ROOM_ID": {"lat": x, "lng": y, "radius": z, "floor": n}}
CLASSROOMS='{"ROOM_101":{"lat":28.6139,"lng":77.2090,"radius":20,"floor":1}}'

# WiFi Access Points Mapping
# Format: {"ROOM_ID": ["AP_MAC_1", "AP_MAC_2"]}
WIFI_MAPPING='{"ROOM_101":["00:11:22:33:44:55","00:11:22:33:44:66"]}'

# Beacon Mapping
# Format: {"ROOM_ID": ["BEACON_UUID_1", "BEACON_UUID_2"]}
BEACON_MAPPING='{"ROOM_101":["beacon-101-a","beacon-101-b"]}'

# Anomaly Detection
ANOMALY_DETECTION_ENABLED=true
RISK_SCORE_THRESHOLD=40

# Random Presence Checks
RANDOM_CHECKS_ENABLED=true
RANDOM_CHECKS_COUNT=3
RANDOM_CHECK_TIMEOUT=120000

# Session Configuration
SESSION_SECRET=your_session_secret
SESSION_TIMEOUT=3600000

# Admin Credentials (Initial Setup)
ADMIN_EMAIL=admin@attendance.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=System Administrator